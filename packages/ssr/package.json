{
  "name": "@stencil/ssr",
  "version": "0.2.0",
  "description": "A package for server-side rendering Stencil components.",
  "author": "Ionic Team",
  "homepage": "https://stenciljs.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stenciljs/output-targets.git"
  },
  "bugs": {
    "url": "https://github.com/stenciljs/output-targets/issues"
  },
  "main": "./dist/vite.cjs",
  "module": "./dist/vite.js",
  "types": "./dist/vite/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next.js",
      "require": "./dist/next.cjs"
    },
    "./webpack": {
      "types": "./dist/webpack/index.d.ts",
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "build": "vite build",
    "dev": "vite build --watch",
    "version": "pnpm run build",
    "prettier": "prettier \"./src/**/*.{html,ts,tsx,js,jsx}\" --write",
    "release": "np",
    "test": "vitest run",
    "test.watch": "vitest --watch",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "component-library": "workspace:*",
    "component-library-react": "workspace:*",
    "typescript": "^5.4.4",
    "vite-plugin-dts": "^4.5.3"
  },
  "dependencies": {
    "ast-types": "^0.14.2",
    "decamelize": "^6.0.0",
    "esbuild": "^0.25.0",
    "imports-loader": "^5.0.0",
    "mlly": "^1.7.4",
    "recast": "^0.23.9"
  },
  "peerDependencies": {
    "vite": "^6.x",
    "next": "13 || 14 || 15",
    "webpack": "^5.x"
  }
}
